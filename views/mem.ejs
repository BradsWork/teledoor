<!-- /css -->
</head>
<body>
    <div class="container" style="margin-top: -125px; position: absolute; margin-left: 10px;">
        <div class="row">
          <div class="submit-wrapper">
           <a href="/">TELEDOOR</a>   
          </div>
        </div>
    </div>

    <div class="container">
        <h1 class="w3ls">Enter your details!</h1>
        <div class="content-w3ls">
            <div class="content-agile1">
                <h2 class="agileits1">TELEDOOR</h2>
                <p class="agileits2">Enjoy !</p>
            </div>
            <form action="/paymentuser" method="post">
                <div class="form-control agileinfo">  
                    <input type="text" class="lock" name="fname" id="fname" placeholder="Enter Name" required="required">
                </div> 
                <div class="form-control agileinfo">  
                    <input type="number" class="lock" name="cno" id="cno" placeholder="Enter Number" required="required">
                </div> 
                <div class="form-control agileinfo">  
                    <input type="number" class="lock" name="price" id="price" readonly value="<%= data[0].Pay_price %>">
                </div>
                 <div class="form-control w3layouts">
                      <textarea  class="lock" id="address" placeholder="Enter address" name="address"></textarea>
                </div> 

                <div class="form-control w3layouts">  
                    <input type="email" id="email" name="email" placeholder="mail@example.com" title="Please enter a valid email" required="">
                </div>

      
                <div class="radio_buttons">
                     <label for="Payment" class="label_radio">Payment option:</label>

                     <!-- <div class="radio">
                          <label class="label_radio"><input type="radio" name="payradio" checked="checked" value="Paypal" id="">Paypal</label>
                     </div> -->
                    <div class="radio">
                          <label class="label_radio"><input type="radio" name="payradio" value="Stripe">Stripe</label>
                    </div>
        
                </div>
                <input type="submit" class="register" value="Make Payment">
            </form>
      <div class="clear"></div>
    </div>
  
</body>
</html>





