<!doctype html>
<html>
<head>
<title>Registration Form</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<!-- fonts -->
<link href="//fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Monoton" rel="stylesheet">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- /fonts -->
<!-- css -->
<link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
<link href="/css/login_style.css" rel='stylesheet' type='text/css' media="all" />
<!-- /css -->
</head>
<body>
<div class="container" style="margin-top: -125px;
    position: absolute;
    margin-left: 10px;">
    <div class="row">
        <div class="submit-wrapper">
         <a href="/">TELEDOOR</a>   
        </div>
    </div>
</div>
<h1 class="w3ls">Register Here !</h1>
<div class="content-w3ls">
  <div class="content-agile1">
    <h2 class="agileits1">TELEDOOR</h2>
    <p class="agileits2">Enjoy !</p>
  </div>
  <div class="content-agile2">
    <form action="/register" method="post" onsubmit=" return validate()">
      <div class="form-control w3layouts"> 
        <input type="text" id="firstname" name="firstname" placeholder="First Name" title="Please enter your First Name" required="">
        <p><span class="femsg fhidden">Please Enter a Valid First Name</span></p>
      </div>
      
      <div class="form-control w3layouts">  
        <input type="text" id="lastname" name="lastname" placeholder="Last Name" title="Please enter your Last Name" required="">
        <p><span class="lemsg lhidden">Please Enter a Valid Last Name</span></p>
      </div>

      <div class="form-control w3layouts">  
        <input type="email" id="email" name="email" placeholder="mail@example.com" title="Please enter a valid email" required="">
        <p><span class="eemsg ehidden">Please Enter a Valid Email Address</span></p>
      </div>

      <div class="form-control agileinfo">  
        <input type="password" class="lock" name="password" placeholder="Password" id="password1" required="">
        <p><span class="pemsg phidden">Please Enter minimum six characters, at least one letter, one number and one special character:</span></p>
      </div>  

      <div class="form-control agileinfo">  
        <input type="password" class="lock" name="confirm-password" placeholder="Confirm Password" id="password2" required="">
        <p><span class="p2emsg p2hidden">Passwords do not match !</span></p>
      </div>      
      
      <input type="submit" class="register" value="Register">
    </form>
    <script type="text/javascript">

    $(document).ready(function(){


    var regexname=/^([a-zA-Z]{3,16})$/;
    $('#firstname').on('keypress keydown keyup',function(){
             if (!$(this).val().match(regexname)) {
              // there is a mismatch, hence show the error message
                 $('.femsg').removeClass('fhidden');
                 $('.femsg').show();
             }
           else{
                // else, do not display message
                $('.femsg').addClass('fhidden');
               }
         });

    $('#lastname').on('keypress keydown keyup',function(){
             if (!$(this).val().match(regexname)) {
              // there is a mismatch, hence show the error message
                 $('.lemsg').removeClass('lhidden');
                 $('.lemsg').show();
             }
           else{
                // else, do not display message
                $('.lemsg').addClass('lhidden');
               }
         });

    $('#email').on('keypress keydown keyup',function(){
      var emailExp = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
             if (!$(this).val().match(emailExp)) {
              // there is a mismatch, hence show the error message
                 $('.eemsg').removeClass('ehidden');
                 $('.eemsg').show();
             }
           else{
                // else, do not display message
                $('.eemsg').addClass('ehidden');
               }
         });
    $('#password1').on('keypress keydown keyup',function(){
      var passExp = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[$@$!%*#?&])[A-Za-z\d$@$!%*#?&]{6,}$/;
             if (!$(this).val().match(passExp)) {
              // there is a mismatch, hence show the error message
                 $('.pemsg').removeClass('phidden');
                 $('.pemsg').show();
             }
           else{
                // else, do not display message
                $('.pemsg').addClass('phidden');
               }
      });
    $('#password2').on('keypress keydown keyup',function(){
               if( $('#password1').val()!= $('#password2').val() ){
              // there is a mismatch, hence show the error message
                 $('.p2emsg').removeClass('p2hidden');
                 $('.p2emsg').show();
             }
           else{
                // else, do not display message
                $('.p2emsg').addClass('p2hidden');
               }
         });
    });
      

    </script>
  </div>

      <p class="agileits2">Already Registered !<a href="/login" style=" cursor: pointer; color:#3970b0; "> Login Here !</p>
  <div class="clear"></div>
</div>
<style>
  .femsg , .lemsg, .eemsg, .pemsg, .p2emsg {
    color: red;
    margin: 71px;
}
.fhidden, .lhidden, .ehidden, .phidden, .p2hidden {
     display: none;
}
</style>
</body>
</html>