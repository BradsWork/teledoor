<div class="container-fluid paddingtopbottom">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="sub-heading">Pricing</h2>
      </div>
    </div>
    <br>
    <div class="row">
      <% for (var i=0;i< data3.length;i++){ %>
