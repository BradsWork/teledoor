<%- include header %>
<style>
  .paddingtopbottom
  {
    padding-top: 3em;
    padding-bottom: 3em;
  }
  .sub-heading
  {
    font-size: 25px;
    color: #f4511e;
  }
</style>
<!-- hero image-->

<script>
    function f()
    {
    var x = document.getElementById('s');
    document.getElementById('s').value =x.value.toUpperCase(); ;
    }
</script>
  <div class="hero-image">
    <div class="hero-text">
      <h1 style="font-size:30px">Latest Movies & T.V Series</h1>
      <br>
        <form  action="/search" method="get">
          <div class="input-group">
            <input type="text" class="form-control input-lg" placeholder="Search" name="s" id='s'>
              <div class="input-group-btn">
                <button class="btn btn-default btn-lg " type="submit" onclick="f()">
                 <i class="glyphicon glyphicon-search" style="padding: 2px;"></i>
                </button>
              </div>
          </div>
        </form>
    </div>
  </div>
<!-- hero image end -->


<!-- uploads tstart -->
<div class="container-fluid paddingtopbottom">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="sub-heading">Uploads:</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="customNavigation" style="text-align: right;">
          <a class="btn prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
          <a class="btn next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        </div>
        <div class="owl-carousel owl-theme">
          <% for(var i=0;i< data.length;i++){ %>
          <div class="item">
          <div style="position: relative;" class="image">
          <h4 style="position: absolute;z-index: 10;background-color: black;color: white;right: 0px;bottom: 0.1em;padding: 5px;"><%= data[i].duration %> </h4>
          <a  href="play/<%= data[i].id %>"><img src="<%= data[i].image %>"  style="border-radius: 4px; border-radius: 5px;box-shadow: 0px  0px 25px grey;"  >
          <div class="overlay">
                <i class="far fa-play-circle"></i>
          </div>
          </a>
          </div>
          <div style="margin-top: 2em;position: relative;">
          <h3 style="font-weight: bold;font-size:18px;min-height:40px;"><%= data[i].title %></h3> 
          <p><span class=" fa fa-eye view-icon" style="color: #5e120d"></span> <%= data[i].views %> Views </p>
          </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- uploads end -->

<!-- latest movies start -->
<div class="container-fluid paddingtopbottom bg-grey">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2 class="sub-heading">Latest Movies:</h2>
      </div>
    </div>
    <br>
    <% 
    c = 1;
    for(var i=0;i< data1.length;i++){ %>
      <% if (c == 1 || c == 6){ %>
        <div class="row">
      <% } %>
        <div class="col-md-2" style="margin-top: 1em;">
          <div>
            <a href="/mplay/<%= data1[i].Pid%>" class="image1">
              <img class="img-responsive" src="<%= data1[i].Pimge %>" style = "width:100%;height: 250px;border-radius: 5px;box-shadow: 0px 0px 25px grey;">      
              <h3 style="font-weight: bold;font-size:18px;min-height:40px;text-transform: uppercase;margin-top: 1em;margin-bottom: 1em;"> <%= data1[i].Pname %> </h3>
            </a>
          </div>
        </div>
      <% 
      if(c == 6 || c == 11)
      {
        %>
        </div>
        <%
      }
      c++; 
    } 
    %>
  </div>
</div>
<!-- latest movie edn -->


<!-- latest tv show start -->
<div class="container-fluid paddingtopbottom">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="sub-heading">Latest T.V. Shows</h2>
      </div>
    </div>
    <br>
    <div class="row">
    <% for(var i=0;i< data2.length;i++){ %>
        <div class="col-md-2">
          <div>
            <a href="/tplay/<%= data2[i].Pid %>" class="image1">
              <img class="img-responsive" src="<%= data2[i].Pimge %>" style = "width:100%;height: 250px;border-radius: 5px;box-shadow: 0px 0px 25px grey;">
                
              <div class="titleText" >
              <h4> <%= data2[i].Pname %> </h4>
            </div>
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
<!-- latest tv shows end -->


