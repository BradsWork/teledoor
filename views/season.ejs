<% include menu %>
<div class="container">

    <% if(typeof data2 !='undefined'){ %>

      <form action="/viewS/updateSeason/<%= data2[0].Sid %>" method="post">

      <div class="form-group">
        <label>Season Name</label>
        <input type="text" name="Sname" class="form-control" value="<%= data2[0].Sname %>">
      </div>
      <br>

      <div class="form-group">
        <label>Seson Description</label>
        <input type="text" name="Sdesc" class="form-control" value="<%= data2[0].Sdesc %>">
      </div>
      <br>     

      <div class="form-group">
           <label>Product</label>
            <select name="Pid" class="form-control" required="required">
          <option  class="active">Select Product</option>
          <% for (var i=0;i< data.length;i++){ %>
          <option value="<%= data[i].Pid %>"><%= data[i].Pname %></option>       
            <%}%>
          
        </select>
        </div>
        <br>  

      <div class="form-group">
      <input type="submit" name="sbtn" class="btn btn-primary">
    </div>
      <br>

  </form>
  <% } else  {%>
    <form action="/seasonform" method="post">
        <div class="form-group">
          <label>Season Name</label>
          <input type="text" name="Sname" class="form-control">
        </div>
        <br>
  
        <div class="form-group">
          <label>Seson Description</label>
          <input type="text" name="Sdesc" class="form-control">
        </div>
        <br>     
  
        <div class="form-group">
             <label>Product</label>
              <select name="Pid" class="form-control" required="required">
            <option  class="active">Select Product</option>
            <% for (var i=0;i< data.length;i++){ %>
            <option value="<%= data[i].Pid %>"><%= data[i].Pname %></option>       
              <%}%>
            
          </select>
          </div>
          <br>  
  
        <div class="form-group">
        <input type="submit" name="sbtn" class="btn btn-primary">
      </div>
        <br>
    </form>
    <% } %>
</div>

</body>

<style type="text/css">
  body{
    background-color: lightgrey;
  }
</style>
</html>