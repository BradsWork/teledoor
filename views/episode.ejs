<% include menu %>

<div class="container">

    <% if(typeof data2 !='undefined'){ %>

      <form action="/viewE/updateEpisode/<%= data2[0].Eid %>" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Episode Name</label>
        <input type="text" name="Ename" class="form-control" value="<%= data2[0].Ename %>">
      </div>
      <br>

        <div class="form-group">
           <label>Season</label>
            <select name='Sid' class="form-control" required="required">
          <option  class="active">Select Season</option>
          <% for (var i=0;i< data.length;i++){ %>
          <option value="<%= data[i].Sid %>"><%= data[i].Sname %></option>       
            <%}%>
          
        </select>
        </div>
        <br>


      <div class="form-group">
        <label>Url</label>
        <input type="file" name="Url" class="form-control" value="<%= data2[0].url %>>
      </div>
      <br>     

      <div class="form-group">
      <input type="submit" name="sbtn" class="btn btn-primary">
    </div>
      <br>

  </form>
  <% } else { %> 
    <form action="/episodeForm" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Episode Name</label>
        <input type="text" name="Ename" class="form-control">
      </div>
      <br>

        <div class="form-group">
           <label>Season</label>
            <select name='Sid' class="form-control" required="required">
          <option  class="active">Select Season</option>
          <% for (var i=0;i< data.length;i++){ %>
          <option value="<%= data[i].Sid %>"><%= data[i].Sname %></option>       
            <%}%>
          
        </select>
        </div>
        <br>


      <div class="form-group">
        <label>Url</label>
        <input type="file" name="Url" class="form-control">
      </div>
      <br>     

      <div class="form-group">
      <input type="submit" name="sbtn" class="btn btn-primary">
    </div>
      <br>

  </form>
  <% } %>

</div>

</body>

<style type="text/css">
  body{
    background-color: lightgrey;
  }
</style>
</html>